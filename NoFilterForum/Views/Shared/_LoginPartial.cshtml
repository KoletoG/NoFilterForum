@using Microsoft.AspNetCore.Identity
@using NoFilterForum.Models.DataModels
@using System.Web
@inject SignInManager<UserDataModel> SignInManager
@inject UserManager<UserDataModel> UserManager
<ul class="navbar-nav">
	@if (SignInManager.IsSignedIn(User))
	{
		<li class="nav-item">
			<a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Notifications">Notifications</a>
		</li>
		<li class="nav-item">
			<a class="nav-link text-dark" asp-controller="Home" asp-action="Profile" asp-route-page="1" asp-route-userName="@HttpUtility.UrlEncode(this.User.Identity.Name)">Your Profile</a>
		</li>
		<li class="nav-item">
			<form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
				<button type="submit" class="nav-link btn btn-link text-dark">Logout</button>
			</form>
		</li>
	}
	else
	{
		<li class="nav-item">
			<a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Register">Register</a>
		</li>
		<li class="nav-item">
			<a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Login">Login</a>
		</li>
	}
</ul>
