@using NoFilterForum.Models.ViewModels
@model ProfileViewModel
@{
	if (Model.IsSameUser)
	{
		<h1>Hello!</h1>
	}
}
<h1>@Model.User.UserName</h1>
@{
	// Need to combine them or separate them into different pages
}
<h5>Posts count: @Model.User.PostsCount</h5>
@{
	foreach(var post in Model.Posts)
	{
		<a asp-action="PostView" asp-route-id="@post.Id"><h5>@post.Title</h5></a>
	}
	foreach(var reply in Model.Replies)
	{
		<a asp-action="PostView" asp-route-id="@reply.Post.Id"><h5>@reply.Content</h5></a>
	}
}