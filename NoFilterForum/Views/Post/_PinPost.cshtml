@using Web.ViewModels.Admin
@using Web.ViewModels.Post
@model PinPostPartialViewModel

@{
	string postIdName = nameof(PinPostViewModel.PostId);
	string postIdValue = Model.PinPostVM.PostId; 
}
@if (Model.IsPinned)
{
	<form asp-action="PinPost" asp-controller="Admin" method="post">
		@Html.AntiForgeryToken()
		<input hidden name="@postIdName" value="@postIdValue" />
		<button type="submit" class="rounded-1 borderMain mt-1" style="position:absolute;background:none;border:none"><img src="~/images/pin2.png" style="height:15px;width:15px" /></button>

	</form>
}
else
{
	<form asp-action="PinPost" asp-controller="Admin" method="post">
		@Html.AntiForgeryToken()
		<input hidden name="@postIdName" value="@postIdValue" />
		<button type="submit" class="rounded-1 mt-1"style="position:absolute;background:none;border:none"><img src="~/images/pin.png" style="height:15px;width:15px"/></button>
	</form>
}