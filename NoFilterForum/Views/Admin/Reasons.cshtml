@using NoFilterForum.Models.ViewModels
@model ReasonsViewModel

@{
	foreach(var user in Model.Users)
	{
		<h3>@user.UserName</h3>
		<h6>@user.Reason</h6>
		<form asp-action="ConfirmUser" asp-route-userId="@user.Id" method="post">
		@Html.AntiForgeryToken()
		<button type="submit">Confirm User</button>
		</form>
	}

}