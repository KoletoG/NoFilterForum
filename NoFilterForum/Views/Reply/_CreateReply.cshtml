@using Web.ViewModels.Reply
@model CreateReplyViewModel
<form asp-action="Create" class="mt-3 mb-3 row g-0 justify-content-around" asp-controller="Reply" method="post">
	@Html.AntiForgeryToken()
	<span asp-validation-for="Content" class="text-danger"></span>
	<textarea asp-for="Content" class="col-9 mainInput ps-1" placeholder="Write a reply..."></textarea>
	<input type="hidden" asp-for="PostId" value="@Model.PostId" />
	<button type="submit" class="btn mainBtn align-self-center col-2">Create reply</button>
</form>